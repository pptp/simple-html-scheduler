<div class="item-data">
  <h3 class="item-name lead">
    {{ schedule.item.style }}
    <small>
      {{ schedule.day.name }}
      {{ schedule.time }} - {{ schedule.timeEnd }}
    </small>
  </h3>
  <p class="item-desc">{{ schedule.item.description }}</p>
</div>
