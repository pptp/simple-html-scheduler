<h3>Доступные даты:</h3>
<div class="calendar-data">
  <ul>
    {{#each days}}
      <div>
        <button type="button"
            class="btn btn-lg btn-default calendar-item mv05 {{#if isActive}}active{{/if}}"
            data-date="{{ [helpers/date_string] date }}">
          {{ [helpers/date_format] date }}
        </button>
      </div>
    {{/each}}
  </ul>
</div>
